<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:rkw_order/Resources/Private/Language/locallang_db.xlf:flexform.order.sheetTitle</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.mail.backendUser>
                        <TCEforms>
                            <label>LLL:EXT:rkw_order/Resources/Private/Language/locallang_db.xlf:flexform.select.beuser</label>
                            <config>
                                <type>select</type>
                                <size>10</size>
                                <minitems>0</minitems>
                                <maxitems>99</maxitems>
                                <multiple>1</multiple>
