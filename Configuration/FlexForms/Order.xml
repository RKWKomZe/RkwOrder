                        </TCEforms>
                    </settings.mail.backendUser>

                    <settings.order.maximum>
                        <TCEforms>
                            <label>LLL:EXT:rkw_order/Resources/Private/Language/locallang_db.xlf:flexform.orderMaximum</label>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <max>3</max>
                                <eval>trim</eval>
                                <default>20</default>
                            </config>
                        </TCEforms>
                    </settings.order.maximum>
                    <settings.order.allowSeries>
                        <TCEforms>
                            <label>LLL:EXT:rkw_order/Resources/Private/Language/locallang_db.xlf:flexform.allowSeries</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.order.allowSeries>
                    <settings.order.allowSubscription>
                        <TCEforms>
                            <label>LLL:EXT:rkw_order/Resources/Private/Language/locallang_db.xlf:flexform.allowSubscription</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.order.allowSubscription>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
